<%= form_for @post do |f| %>
	<% if @post.errors.any? %>
		<div id="errors">
			<h2>Entrez un post valide</h2>
		</div>
	<% end %>
	<%= f.label :title, 'Titre' %><br>
	<%= f.text_field :title %><br>
	<br>
	<%= f.label :body, 'Texte' %><br>
	<%= f.text_field :body %><br>
	<br>
	<%= f.submit "Soumettre" %>
<% end %>