<div class="comment cleafix">
	<div class="comment_content">
		<p class="comment_name"><%= comment.name %></p>
		<p class="comment_body"><%= comment.body %></p>
		<p class="comment_type"><%= comment.created_at.strftime("%d, %B , %Y") %></p>
	</div>	
	<% if user_signed_in?%>
	<p><%= link_to 'Supprimer', [comment.post, comment],method: :delete,class: "button",data: { confirm: 'Etes vous certain?' } %>
	</p>
	<%end%>
</div>