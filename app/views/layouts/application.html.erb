<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div id="sidebar">
		<div id="logo">
		<%= link_to root_path do %>
			<%= image_tag("blog.png",size:"42x32") %>
			<% end %>
		</div>
	
		<ul>
			<li class="category">Website</li>
			<li><%=link_to "Blog",root_path %></li>
			<li><%=link_to "A propos", about_path %></li>
		</ul>
		<p class="sign_in">Admin</p>
	</div>

	<div id="main_content">
		<div id="header">
			<% if current_page?(root_path)%>
				<p>Tous les Posts</p>
			<% elsif current_page?(about_path)%>
				<p>A Propos</p>
			<% else %>
				<%= link_to "Retourner aux posts", root_path %>
			<% end %>

			<div class="buttons">
				<button class="button"><%= link_to "Nouveau Post", new_post_path %></button>
				<button class="button">Se d√©connecter</button>
			</div>
		</div>
		<% flash.each do |name,msg|%>
			<%= content_tag(:div, msg, class:"alert") %>
		<% end %>
		<%= yield %>
	</div>



</body>
</html>
